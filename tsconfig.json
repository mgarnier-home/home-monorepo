{
  "compilerOptions": {
    "baseUrl": ".",
    /* Base Options: */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "verbatimModuleSyntax": false,
    "allowJs": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    /* Strictness */
    "strict": true,
    // "noUncheckedIndexedAccess": true,
    /* If NOT transpiling with TypeScript: */
    "moduleResolution": "Node",
    "module": "CommonJS",
    "noEmit": true,
    /* If your code doesn't run in the DOM: */
    "lib": ["es2022", "DOM"],
    "paths": {
      "@libs/*": ["libs/*/src/index.ts"],
      "@libs/nodesight-types": ["libs/nodesight-types/types/types.d.ts"]
    }
  },
  "include": ["apps/autosaver/src/**/*.ts", "libs/**/*.ts"]
}
