{
  "private": true,
  "name": "dashboard",
  "scripts": {
    "build": "run-s build:*",
    "esbuild:app": "tsx scripts/app.ts",
    "lint:app": "tsc --project app/tsconfig.json",
    "build:app": "npm run esbuild:app -- build",
    "dev:app": "run-p dev:app:*",
    "dev:app:esbuild": "npm run esbuild:app -- dev",
    "esbuild:server": "tsx scripts/server.ts",
    "lint:server": "tsc --project server/tsconfig.json --noEmit",
    "build:server": "npm run lint:server && npm run esbuild:server -- build",
    "dev:server": "run-p dev:server:*",
    "dev:server:node": "node --watch server-dist/main.js",
    "dev:server:esbuild": "npm run esbuild:server -- dev",
    "run:server": "npm run build:server && node server-dist/main.js"
  },
  "dependencies": {
    "express": "^4.18.2",
    "utils": "workspace:*"
  },
  "devDependencies": {
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tsx": "^4.7.0"
  }
}