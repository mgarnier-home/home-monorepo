{
  "private": true,
  "name": "dashboard",
  "scripts": {
    "build": "run-s build:*",
    "dev": "run-p dev:*",
    "esbuild:app": "tsx scripts/app.ts",
    "lint:app": "tsc --project app/tsconfig.json",
    "build:app": "npm run esbuild:app -- build && npm run build:app:tailwind",
    "build:app:tailwind": "tailwindcss -i ./app/src/index.css -o ./app-dist/tailwind.css -c ./app/tailwind.config.ts",
    "dev:app": "run-p dev:app:*",
    "dev:app:esbuild": "npm run esbuild:app -- dev",
    "dev:app:tailwind": "npm run build:app:tailwind -- -w",
    "start:app": "run-p \"esbuild:app -- serve\" dev:app:tailwind",
    "esbuild:server": "tsx scripts/server.ts",
    "lint:server": "tsc --project server/tsconfig.json --noEmit",
    "build:server": "npm run lint:server && npm run esbuild:server -- build",
    "dev:server": "run-p dev:server:*",
    "dev:server:node": "node --watch server-dist/main.js",
    "dev:server:esbuild": "npm run esbuild:server -- dev",
    "start:server": "npm run build:server && node server-dist/main.js"
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "js-yaml": "^4.1.0",
    "nodesight-types": "workspace:*",
    "ping": "^0.4.4",
    "recharts": "^2.10.3",
    "socket.io": "^4.7.2",
    "socket.io-client": "^4.7.2",
    "tailwindcss": "^3.4.0",
    "utils": "workspace:*",
    "@types/express": "^4.17.21",
    "@types/js-yaml": "^4.0.9",
    "@types/ping": "^0.4.4",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
